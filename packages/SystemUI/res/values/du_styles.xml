<resources>

    <!-- Switch bar text appearance -->
    <style name="TextAppearance.SwitchBar" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <!-- Pure Tuner Theme-->
    <style name="ExTunerSettings" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="preferenceTheme">@style/TunerPreferenceTheme</item>
    </style>

    <!-- Custom Carrier Label -->
    <style name="TextAppearance.StatusBar.CarrierLabel" parent="@*android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textSize">@dimen/status_bar_carrier_height</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Status bar notification ticker -->
    <style name="TextAppearance.StatusBar.PhoneTicker" parent="@*android:style/TextAppearance.StatusBar">
        <!-- Note: must be dp to fit in status bar -->
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextAppearance.QSEdit.CustomHeaders"
        parent="@*android:style/TextAppearance.DeviceDefault.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@*android:color/accent_device_default_light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Pixel navbar -->
    <style name="DotStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:alpha">@null</item>
    </style>
    
    <style name="TriStateUiText">
        <item name="android:textSize">11.0sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
